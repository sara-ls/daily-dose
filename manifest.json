{
  "manifest_version": 2,
  "name": "Daily Dose",
  "version": "1.2.0",
  "description": "Collect Motivational GIFs",
  "web_accessible_resources": ["images/*", "sounds/*"],
  "chrome_url_overrides": {
    "newtab": "manager.html"
  },
  "permissions": ["tabs", "http://*/*", "https://*/*", "activeTab", "storage"],
  "short_name": "Daily Dose",
  "icons": {
    "192": "icon/android-chrome-192x192.png",
    "512": "icon/android-chrome-512x512.png"
  },
  "browser_action": {
    "default_icon": "icon/favicon-32x32.png",
    "default_popup": "popup.htm"
  },
  "background": {
    "scripts": ["background.js", "manager.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["*/manager.html"],
      "css": ["fix.css"],
      "js": ["script.js", "jquery-3.4.1.min.js"]
    }
  ]
}
